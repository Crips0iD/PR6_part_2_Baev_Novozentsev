<Page x:Class="WpfAppBaev.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login" Background="#FFF5F5F5">

    <Grid>
        <Border Background="White" CornerRadius="10" Padding="20" Width="400" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="5" Color="#FF000000" Opacity="0.3"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Вход в систему" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 0 0 20" Foreground="#FFE91E63"/>

                <TextBlock Text="Логин:" Foreground="#FFE91E63" Margin="0 5 0 0"/>
                <TextBox x:Name="loginTextBox" />

                <TextBlock Text="Пароль:" Foreground="#FFE91E63" Margin="0 10 0 0"/>
                <PasswordBox x:Name="passwordText" />

                <Button x:Name="loginButton" Content="Войти" Width="200" Margin="0 20 0 10" Click="loginButton_Click"/>

                <Button x:Name="singupButton" Content="Регистрация" Width="200" Click="singupButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>