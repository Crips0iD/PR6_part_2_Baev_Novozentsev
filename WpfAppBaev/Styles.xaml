<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Стиль для кнопок -->
    <Style x:Key="CustomButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Pink"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="5"
                            BorderThickness="2"
                            BorderBrush="HotPink">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Стиль для текстовых полей -->
    <Style x:Key="CustomTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="#FFF8BBD0"/>
        <Setter Property="BorderBrush" Value="#FFE91E63"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Height" Value="35"/>
    </Style>

    <!-- Стиль для PasswordBox -->
    <Style x:Key="CustomPasswordBoxStyle" TargetType="PasswordBox">
        <Setter Property="Background" Value="#FFF8BBD0"/>
        <Setter Property="BorderBrush" Value="#FFE91E63"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Height" Value="35"/>
    </Style>

    <!-- Стиль для DataGrid -->
    <Style x:Key="CustomDataGridStyle" TargetType="DataGrid">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="RowBackground" Value="White"/>
        <Setter Property="AlternatingRowBackground" Value="#FFF5F5F5"/>
        <Setter Property="BorderBrush" Value="HotPink"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- Стиль для ListView -->
    <Style x:Key="CustomListViewStyle" TargetType="ListView">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="BorderBrush" Value="HotPink"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- Стиль для CheckBox -->
    <Style x:Key="CustomCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="Foreground" Value="HotPink"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <!-- Стиль для RadioButton -->
    <Style x:Key="CustomRadioButtonStyle" TargetType="RadioButton">
        <Setter Property="Foreground" Value="DarkBlue"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <!-- Стиль для ComboBox -->
    <Style x:Key="CustomComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Background" Value="#FFF8BBD0"/>
        <Setter Property="BorderBrush" Value="#FFE91E63"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Height" Value="35"/>
    </Style>

    <!-- Стиль для DatePicker -->
    <Style x:Key="CustomDatePickerStyle" TargetType="DatePicker">
        <Setter Property="Background" Value="#FFF8BBD0"/>
        <Setter Property="BorderBrush" Value="#FFE91E63"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Height" Value="35"/>
    </Style>

    <!-- Стиль для ProgressBar -->
    <Style x:Key="CustomProgressBarStyle" TargetType="ProgressBar">
        <Setter Property="Background" Value="LightGray"/>
        <Setter Property="Foreground" Value="LightBlue"/>
        <Setter Property="Height" Value="20"/>
    </Style>

    <!-- Стиль для Slider -->
    <Style x:Key="CustomSliderStyle" TargetType="Slider">
        <Setter Property="Background" Value="LightGray"/>
        <Setter Property="Foreground" Value="LightBlue"/>
        <Setter Property="Height" Value="20"/>
    </Style>

    <!-- Стиль для Menu -->
    <Style x:Key="CustomMenuStyle" TargetType="Menu">
        <Setter Property="Background" Value="LightBlue"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Стиль для MenuItem -->
    <Style x:Key="CustomMenuItemStyle" TargetType="MenuItem">
        <Setter Property="Background" Value="LightBlue"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Стиль для ToolBar -->
    <Style x:Key="CustomToolBarStyle" TargetType="ToolBar">
        <Setter Property="Background" Value="LightBlue"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Стиль для ToolBarButton -->
    <Style x:Key="CustomToolBarButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="LightBlue"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Стиль для StatusBar -->
    <Style x:Key="CustomStatusBarStyle" TargetType="StatusBar">
        <Setter Property="Background" Value="LightBlue"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Стиль для StatusBarItem -->
    <Style x:Key="CustomStatusBarItemStyle" TargetType="StatusBarItem">
        <Setter Property="Background" Value="LightBlue"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Стиль для TabControl -->
    <Style x:Key="CustomTabControlStyle" TargetType="TabControl">
        <Setter Property="Background" Value="LightBlue"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Стиль для TabItem -->
    <Style x:Key="CustomTabItemStyle" TargetType="TabItem">
        <Setter Property="Background" Value="LightBlue"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Стиль для TreeView -->
    <Style x:Key="CustomTreeViewStyle" TargetType="TreeView">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Стиль для TreeViewItem -->
    <Style x:Key="CustomTreeViewItemStyle" TargetType="TreeViewItem">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Стиль для Expander -->
    <Style x:Key="CustomExpanderStyle" TargetType="Expander">
        <Setter Property="Background" Value="LightBlue"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Стиль для GroupBox -->
    <Style x:Key="CustomGroupBoxStyle" TargetType="GroupBox">
        <Setter Property="Background" Value="LightBlue"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Стиль для Label -->
    <Style x:Key="CustomLabelStyle" TargetType="Label">
        <Setter Property="Foreground" Value="HotPink"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Стиль для TextBlock -->
    <Style x:Key="CustomTextBlockStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="DarkBlue"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Стиль для Hyperlink -->
    <Style x:Key="CustomHyperlinkStyle" TargetType="Hyperlink">
        <Setter Property="Foreground" Value="DarkBlue"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Стиль для Image -->
    <Style x:Key="CustomImageStyle" TargetType="Image">
        <Setter Property="Width" Value="100"/>
        <Setter Property="Height" Value="100"/>
    </Style>

    <!-- Стиль для ScrollViewer -->
    <Style x:Key="CustomScrollViewerStyle" TargetType="ScrollViewer">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>

    <!-- Стиль для Border -->
    <Style x:Key="CustomBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="DarkBlue"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <!-- Стиль для Grid -->
    <Style x:Key="CustomGridStyle" TargetType="Grid">
        <Setter Property="Background" Value="White"/>
    </Style>

    <!-- Стиль для StackPanel -->
    <Style x:Key="CustomStackPanelStyle" TargetType="StackPanel">
        <Setter Property="Background" Value="White"/>
    </Style>

    <!-- Стиль для WrapPanel -->
    <Style x:Key="CustomWrapPanelStyle" TargetType="WrapPanel">
        <Setter Property="Background" Value="White"/>
    </Style>

    <!-- Стиль для DockPanel -->
    <Style x:Key="CustomDockPanelStyle" TargetType="DockPanel">
        <Setter Property="Background" Value="White"/>
    </Style>

    <!-- Стиль для Canvas -->
    <Style x:Key="CustomCanvasStyle" TargetType="Canvas">
        <Setter Property="Background" Value="White"/>
    </Style>

    <!-- Стиль для UniformGrid -->
    <Style x:Key="CustomUniformGridStyle" TargetType="UniformGrid">
        <Setter Property="Background" Value="White"/>
    </Style>

    <!-- Стиль для ScrollBar -->
    <Style x:Key="CustomScrollBarStyle" TargetType="ScrollBar">
        <Setter Property="Background" Value="LightGray"/>
        <Setter Property="Foreground" Value="LightBlue"/>
    </Style>

    <!-- Стиль для Thumb -->
    <Style x:Key="CustomThumbStyle" TargetType="Thumb">
        <Setter Property="Background" Value="LightBlue"/>
    </Style>

    <!-- Стиль для RepeatButton -->
    <Style x:Key="CustomRepeatButtonStyle" TargetType="RepeatButton">
        <Setter Property="Background" Value="LightBlue"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Стиль для ToggleButton -->
    <Style x:Key="CustomToggleButtonStyle" TargetType="ToggleButton">
        <Setter Property="Background" Value="LightBlue"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Стиль для ContextMenu -->
    <Style x:Key="CustomContextMenuStyle" TargetType="ContextMenu">
        <Setter Property="Background" Value="LightBlue"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Стиль для ToolTip -->
    <Style x:Key="CustomToolTipStyle" TargetType="ToolTip">
        <Setter Property="Background" Value="LightBlue"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>


</ResourceDictionary>